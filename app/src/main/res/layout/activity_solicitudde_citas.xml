<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5A87B"
    tools:context=".SolicituddeCitas">

    <!--    final WindowInsets insets = getRootWindowInsets();-->
    <!--    final RoundedCorner topRight = insets.getRoundedCorner(POSITION_TOP_RIGHT);-->
    <!--    if (topRight == null) {-->
    <!--    return;-->
    <!--    }-->


    <Button
        android:id="@+id/btnFecha"
        android:layout_width="110dp"
        android:layout_height="58dp"
        android:backgroundTint="#F58C40"
        android:fontFamily="@font/inter_bold"
        android:onClick="seleccionarFecha"
        android:text=" Fecha"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631" />

    <Button
        android:id="@+id/btnCancelarCita"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:backgroundTint="#C2A692"
        android:fontFamily="@font/inter_bold"
        android:onClick="seleccionarFecha"
        android:text="CANCELAR CITA"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />

    <Button
        android:id="@+id/btnAgendarCita"
        android:layout_width="123dp"
        android:layout_height="64dp"
        android:backgroundTint="#C2A692"
        android:fontFamily="@font/inter_bold"
        android:onClick="seleccionarFecha"
        android:text="AGENDAR CITA"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835" />

    <Button
        android:id="@+id/btnConsultarCita"
        android:layout_width="151dp"
        android:layout_height="59dp"
        android:backgroundTint="#C2A692"
        android:fontFamily="@font/inter_bold"
        android:onClick="seleccionarFecha"
        android:text="CONSULTAR CITA"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

    <Button
        android:id="@+id/btnHora"
        android:layout_width="112dp"
        android:layout_height="57dp"
        android:backgroundTint="#F58C40"
        android:fontFamily="@font/inter_bold"
        android:onClick="seleccionarHora"
        android:text="Hora"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="336dp"
        android:layout_height="51dp"
        android:backgroundTint="#151515"
        android:text="Solicitud de Cita"
        android:textColor="#1B1919"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="51dp"
        android:fontFamily="@font/inter"
        android:text="Tramites y Servicios Institucionales a un click"
        android:textAlignment="center"
        android:textColor="#1C1B1B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354" />

    <Spinner
        android:id="@+id/idSpinnerTiposolicitud"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="#C2A692"
        android:entries="@array/combo_tiposolicitud"
        android:forceDarkAllowed="false"
        android:textAlignment="center"
        android:textColor="#1C1B1B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <EditText
        android:id="@+id/edtxPersonName"
        android:layout_width="322dp"
        android:layout_height="49dp"
        android:background="#F3D0B6"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Nombres y Apellidos"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#131313"
        android:textColorHint="#454141"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="63dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/iconosinfondo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="427dp"
        android:layout_height="198dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fondovistav1" />

    <TextView
        android:id="@+id/tvfecha"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:background="#F3D0B6"
        android:fontFamily="@font/inter_bold"
        android:textAlignment="center"
        android:textColor="#191717"
        android:textDirection="firstStrong"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <TextView
        android:id="@+id/tvhora"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:background="#F3D0B6"
        android:textAlignment="center"
        android:textColor="#151414"
        android:textDirection="inherit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:foregroundTint="#101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgendarCita"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/clickcitas" />

    <ImageView
        android:id="@+id/ivprevius"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageView
        android:id="@+id/ivnext"
        android:layout_width="61dp"
        android:layout_height="33dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_next" />

</androidx.constraintlayout.widget.ConstraintLayout>